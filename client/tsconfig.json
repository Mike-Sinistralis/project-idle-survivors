{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "src/types",
    ],
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/types/global.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}